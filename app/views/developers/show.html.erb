<h1>Listing All Stories in the project</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Point value</th>
    <th>Stage</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @allstories.each do |story| %>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.description %></td>
        <td><%= story.point_value %></td>
        <td><%= story.Stage %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Sign up', sign_up_story_path(story) %></td>
        <td><% end %></td>
  </tr>
  </tbody>
</table>

