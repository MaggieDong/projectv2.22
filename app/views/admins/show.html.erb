<h2>Listing Admins</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <!-- <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>



<%= link_to 'New Admin', new_admin_path %><br>

<h2>Listing Projects</h2>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Developer</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.developer %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Show all stories', showstories_path(project) %></td>
        <!--  <td><%= link_to 'Edit', edit_project_path(project) %></td>-->
        <td><%= link_to 'Destroy', destroyprojects_path(project), data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New project', new_project_path %><br>

<h2>Listing Developers</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Password</th>
    <th>Project</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.name %></td>
        <td><%= developer.email %></td>
        <td><%= developer.password %></td>
        <td><% @projects.each do |f| %>
              <%= f.title if (f.id == developer.Project_id ) %>
          <% end %></td>
       <!-- <td><%= link_to 'Show', developer %></td>-->
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Developer', new_developer_path %>
